<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bluePrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <RelativeLayout
        android:id="@+id/bannerTop"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/toolbar">
    </RelativeLayout>

    <ListView
        android:id="@+id/listViewSymptom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bannerTop"
        android:layout_above="@id/cardButtonSearch">
    </ListView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardButtonSearch"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        app:cardBackgroundColor="@color/bluePrimary"
        android:layout_above="@id/bannerBottom"
        app:cardCornerRadius="5dp"
        android:layout_margin="8dp"
        android:foreground="?attr/selectableItemBackground"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:textAlignment="center"
            android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/bannerBottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true">
    </RelativeLayout>

</RelativeLayout>